{
  "name": "Sitecore Author Toolbox",
  "version": "6.2.7",
  "manifest_version": 2,
  "description": "A set of handy tools for Sitecore Authors: Live URL, Grouped errors, Flags, Dark mode, Notifications, Media drag & drop...",
  "icons": {
    "128": "images/icon_big.png",
    "16": "images/icon_small.png"
  },
  "default_locale": "en",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": ["activeTab", "tabs", "storage", "downloads", "notifications", "declarativeContent", "contextMenus", "cookies", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/main.min.css"],
      "js": ["js/main.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },
  "browser_action": {
    "default_popup": "options/options.html",
    "default_title": "Sitecore Author Toolbox (options)",
    "default_icon": "images/icon.png"
  },
  "web_accessible_resources": ["images/*", "css/*", "js/*", "audio/*", "options/*", "data/icons.json"],
  "commands": {
    "editInExperienceEditor": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Edit In Experience Editor"
    },
    "editInContentEditor": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Edit In Content Editor"
    },
    "editInHorizon": {
      "suggested_key": {
        "default": "Alt+H"
      },
      "description": "Edit in Horizon"
    },
    "viewPageInsights": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "View Page Insights"
    }
  }
}
